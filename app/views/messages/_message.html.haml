.message{data: {id: message.id}}
  .chat-main__messages--message
    .chat-main__messages--message--box
      .chat-main__messages--message--box--name
        = message.user.name
      .chat-main__messages--message--box--day
        = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
    .chat-main__messages--message--text
      - if message.text.present?
        %p.chat-main__messages--message--text--a
          = message.text
      = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
