.chat-main
  .chat-main__header
    .chat-main__header--left
      .chat-main__header--left--group
        = @group.name
      .chat-main__header--left--member
        - @group.group_users.each do |group_user|
          = group_user.user.name
    .chat-main__header--right
      .chat-main__header--right--edit
        = link_to edit_group_path(@group.id) do
          Edit
  .chat-main__messages
    = render partial: 'message', collection: @messages

  .chat-main__form
    -# %form.new_message
    = form_for [@group, @message] do |f|
      = f.text_field :text, class: 'input-text', placeholder: 'type a message'
      .input-box
        -# %input{type: "text", class: "input-box__text", placeholder: "type a message"}
        -# = f.text_field :text, class: 'input-box__text', placeholder: 'type a message'
        -# %label{class: "input-box__image"}
        -# = f.text_field :text, class: 'input-box__image', placeholder: 'type a message'    
        = f.label :image, class: 'input-box__image' do    
          .i.far.fa-image
          = f.file_field :image, class: 'input-box__image__file'
      = f.submit 'Send', class: 'submit-btn'